{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "variable-name": [
      true,
      "check-format",
      "allow-leading-underscore"
    ],
    "interface-name": [
      true,
      "never-prefix"
    ],
    "ordered-imports": false
  }
}
